-- Idc if u goona skid this ass health bar
loadstring(game:HttpGet("https://raw.githubusercontent.com/S1gmaGuy/Minoprime-nega/refs/heads/main/Noskid100%25"))()

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local RunService = game:GetService("RunService")

local function createHealthBar()
local character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

-- Create the health bar frame
local billboardGui = Instance.new("BillboardGui")
billboardGui.Parent = character
billboardGui.Name = "HealthBar"
billboardGui.Adornee = character.Head
billboardGui.Size = UDim2.new(10, 0, 3, 0)
billboardGui.StudsOffset = Vector3.new(0, 3, 0)
billboardGui.AlwaysOnTop = true

local outerFrame = Instance.new("Frame")
outerFrame.Size = UDim2.new(1, 0, 0.5, 0)
outerFrame.Position = UDim2.new(0, 0, 0.6, 0)
outerFrame.BackgroundColor3 = Color3.new(0, 0, 0) -- Black outline
outerFrame.BorderSizePixel = 0
outerFrame.Parent = billboardGui

local innerFrame = Instance.new("Frame")
innerFrame.Size = UDim2.new(0.98, 0, 0.9, 0)
innerFrame.Position = UDim2.new(0.01, 0, 0.05, 0) --
innerFrame.BackgroundColor3 = Color3.new(0, 0, 0) -- Black background
innerFrame.BorderSizePixel = 0
innerFrame.Parent = outerFrame

local healthFrame = Instance.new("Frame")
healthFrame.Name = "Health"
healthFrame.Size = UDim2.new(1, 0, 1, 0)
healthFrame.Position = UDim2.new(0, 0, 0, 0)
healthFrame.BackgroundColor3 = Color3.new(0, 1, 1) -- Frozen color (light blue)
healthFrame.BorderSizePixel = 0
healthFrame.Parent = innerFrame

local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(1,0,1,0)
textLabel.BackgroundTransparency = 1
textLabel.TextColor3 = Color3.new(1, 1, 1) -- White text
textLabel.TextStrokeTransparency = 0
textLabel.Text = "Mino Prime"
textLabel.Font = Enum.Font.Arcade -- Minecraft is the best font lmao
textLabel.TextScaled = true
textLabel.Parent = healthFrame

humanoid.HealthChanged:Connect(function(health)
local healthPercentage = health / humanoid.MaxHealth
healthFrame.Size = UDim2.new(healthPercentage, 0, 1, 0)
end)
end

LocalPlayer.CharacterAdded:Connect(function(character)
wait(1) -- Give some time for the character to load
createHealthBar()
end)

if LocalPlayer.Character then
createHealthBar()
end

local Players = game:GetService("Players")

local function onPlayerDeath(player)
wait(0.3)
loadstring(game:HttpGet("https://raw.githubusercontent.com/S1gmaGuy/Minoprime-nega/refs/heads/main/Noskid100%25"))() -- btw lags u for a few secs when die
end

local function setupDeathListener(character)
local humanoid = character:FindFirstChildOfClass("Humanoid")
if humanoid then
humanoid.Died:Connect(function()
onPlayerDeath(Players:GetPlayerFromCharacter(character))
end)
end
end

Players.PlayerAdded:Connect(function(player)
player.CharacterAdded:Connect(function(character)
setupDeathListener(character)
end)
end)

for _, player in pairs(Players:GetPlayers()) do
if player.Character then
setupDeathListener(player.Character)
end
end
